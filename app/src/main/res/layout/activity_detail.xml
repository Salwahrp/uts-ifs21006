<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tNamaDino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="150dp"
        android:text="Nama Dinosaur"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tDeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="185dp"
        android:text="Deskripsi"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textFamily1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="235dp"
        android:text="Family"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tFamilyDino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="265dp"
        android:text="FamilyDino"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iPhotoDino"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_theropoda" />

    <TextView
        android:id="@+id/periodeDino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:text="Periode "
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tPeriodeDino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="330dp"
        android:text="PeriodeDino"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/karakteristik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="365dp"
        android:text="Karakteristik"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tKarakteristikDino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="395dp"
        android:text="KarakteristikDino"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/habitat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="445dp"
        android:text="Habitat"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tHabitatDino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="475dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/perilaku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="520dp"
        android:text="Perilaku"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tPerilakuDino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"
        android:text="PerilakuDino"
        android:textSize="16sp" />

</RelativeLayout>